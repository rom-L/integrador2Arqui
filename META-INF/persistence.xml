<persistence>
	<persistence-unit name="Integrador2">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:derby:Integrador2;create=true" />
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password" value="root" />
		</properties>
		<class>integrador2Arqui.clases.Estudiante</class>
		<class>integrador2Arqui.clases.EstudianteCarrera</class>
		<class>integrador2Arqui.clases.Carrera</class>
	</persistence-unit>
</persistence>
